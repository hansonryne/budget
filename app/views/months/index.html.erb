<p id="notice"><%= notice %></p>

<h1>Months</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Assigned Budget</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @months.order(:name).each do |month| %>
      <tr>
        <td><%= month.name %></td>
        <td><%= month.annual_budget.name_as_name_year %></td>
        <td><%= link_to 'Show', month %></td>
        <td><%= link_to 'Edit', edit_month_path(month) %></td>
        <td><%= link_to 'Destroy', month, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

