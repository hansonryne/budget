<p id="notice">
  <%= notice %>
</p>

<p>
  <strong>Name:</strong>
  <%= @month.name_as_month_year %>
</p>

<p>Incomes:
  <% @month.incomes.each do |m| %>
    <%= m.source %>: <%= m.net_amount %>
      <% end %>
</p>

<p>Bills:
  <% @month.bills.each do |m| %>
    <%= m.name %>
      <% end %>
</p>

<p>Savings:
  <% @month.savings.each do |m| %>
    <%= m.name %>
      <% end %>
</p>

